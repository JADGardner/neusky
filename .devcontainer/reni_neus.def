BootStrap: docker
From: dromni/nerfstudio:latest
Stage: spython-base

%environment
  export PYTHONPATH=$PYTHONPATH:/home/user/.local/lib/python3.10/site-packages

%post
  touch /etc/localtime
  touch /usr/bin/nvidia-smi
  touch /usr/bin/nvidia-debugdump
  touch /usr/bin/nvidia-persistenced
  touch /usr/bin/nvidia-cuda-mps-control
  touch /usr/bin/nvidia-cuda-mps-server
  mkdir -p /run/nvidia-persistenced
  touch /run/nvidia-persistenced/socket

  mkdir /home/user/.cache/torch

  apt update
  apt install -y curl

  su - user

  pip install pylint
  pip install black
  pip install yacs
  pip install icosphere
  pip install trimesh
  pip install ipykernel
  pip install jupyterlab
  pip install ipywidgets
  pip install torch-tb-profiler
  pip install pytest
  pip install wget
  pip install pip-system-certs
  pip install wandb --upgrade
  pip install open_clip_torch
  pip install timm
  pip install ftfy
  pip install regex
  pip install clip @ git+https://github.com/openai/CLIP.git,
  pip install --upgrade jupyter-server

  su - 

  chmod -R 777 /home/user/

  su - user

  